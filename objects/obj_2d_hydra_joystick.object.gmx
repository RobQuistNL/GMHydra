        yr = y2
        zr = z2
    //} else {
    //    xr = x1
    //    yr = y1
    //    zr = z1
    //}
}

//xr = arctan2(2 * (q0*q1 + q2*q3), 1 - 2 * (q1*q1 + q2*q2))
//yr = arcsin( 2 * (q0*q2 - q3*q1))
//zr = arctan2(2 * (q0*q3 + q1*q2), 1 - 2 * (q2*q2 + q3*q3))


pitch = radtodeg(yr);
yaw = radtodeg(xr);
roll = radtodeg(zr);

//yaw = 180*abs(matrix[0])
//roll = 180*abs(matrix[4])
//pitch = 180*abs(matrix[8])

pitch = radtodeg(GMHD_getJoystickPitch(controller_id));
