//    return (epsilon &gt; std::abs(a - b));
//}

if (matrix[6] &lt;= -1) {
    xr = 0; //gimbal lock, value of x doesn't matter
    yr = pi / 2;
    zr = xr + arctan2(matrix[1], matrix[2]);
} else if (matrix[6] &gt;= 1) {
    xr = 0;
    yr = -pi / 2;
    zr = -xr + arctan2(-matrix[1], -matrix[2]);
} else { //two solutions exist
    x1 = -arcsin(matrix[6]);
    x2 = pi - x1;

    y1 = arctan2(matrix[4] / cos(x1), matrix[8] / cos(x1));
    y2 = arctan2(matrix[4] / cos(x2), matrix[8] / cos(x2));

    z2 = arctan2(matrix[3] / cos(x2), matrix[0] / cos(x2));
    z1 = arctan2(matrix[3] / cos(x1), matrix[0] / cos(x1));

    //if (abs(x1) &lt; abs(x2)) {
